@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<SanPham>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Giá tiền</th>
                <th>Hình ảnh</th>
                <th>Thể loại</th>
                <th>Tên chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="15%">@item.Name</td>
                    <td width="25%">@item.Description</td>
                    <td width="10%">@item.price</td>
                    <td width="15%"><img width="100" src="@item.ImageUrl" /></td>
                    <td width="15%">@item.TheLoai.Name</td>
                    <td width="15%">
                        <a asp-action="Upsert" asp-route-id="@item.Id">Chỉnh sửa</a>|
                        <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                        <a asp-action="DeleteConfirmed" asp-route-id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="SanPham" asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}